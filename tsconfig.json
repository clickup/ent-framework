{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "emitDeclarationOnly": true, // turns on SWC
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es2019", "es2021.WeakRef"],
    "types": ["node", "jest"],
    "module": "commonjs"
  },
  "typedocOptions": {
    "entryPoints": "src",
    "entryPointStrategy": "expand",
    "mergeModulesMergeMode": "project",
    "out": "docs",
    "logLevel": "Warn",
    "hideGenerator": true,
    "excludeInternal": true,
    "excludePrivate": true,
    "categorizeByGroup": true,
    "hideInPageTOC": true,
    "gitRevision": "master",
    "exclude": ["src/internal/**", "src/__tests__/**"]
  }
}
